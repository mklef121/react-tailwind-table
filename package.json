{
  "name": "react-tailwind-table",
  "version": "0.0.0-development",
  "description": "A Responsive Table component Made with React js and Tailwind Css. Has Pagination and search ability.",
  "author": "mklef121",
  "license": "MIT",
  "repository": "mklef121/react-tailwind-table",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.tsx",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle-crl --css-modules  false --no-compress --format modern,cjs",
    "start": "microbundle-crl watch  --css-modules  false --no-compress --format modern,cjs",
    "prepublish": "run-s build",
    "test": "run-s test:unit test:build",
    "test:build": "run-s build",
    "test:lint": "eslint . --fix",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom --coverage=true",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && npm install && npm run build",
    "deploy": "gh-pages -d example/build",
    "tailwind-build": "postcss ./src/css/tailwind-setup.css -o ./src/css/output.css",
    "semantic-release": "semantic-release"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  },
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@types/react": "^16.9.27",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "gh-pages": "^2.2.0",
    "microbundle-crl": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "prettier": "^2.0.4",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.1",
    "semantic-release": "^17.0.7",
    "tailwindcss": "^1.4.6"
  },
  "files": [
    "dist"
  ]
}
